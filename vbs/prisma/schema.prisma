// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model User {
  name String @unique @id
  password String
  books Book[]
}

model Book {
  isbn String @unique
  title String
  author String
  user User @relation(fields:[addedBy], references: [name])
  addedBy String
  genre String
  coverId String
  coverLink String
  summary String
}